{
  "include": [
    "./src/*.ts",
    "./test/*.ts",
  ],
  
  "compilerOptions": {
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": false, // disabled on ps0 & ps1
    
    "target": "ES2021",
    "module": "CommonJS",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist"
  },
  
  "typedocOptions": {
    "entryPoints": [
      "src/flashcards.ts",
      "src/algorithm.ts"
    ],
    "out": "doc",
    "disableSources": true,
    "excludePrivate": true,
    "readme": "none"
  },
}
